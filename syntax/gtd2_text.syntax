--- 
name: GTD2 Text
fileTypes: 
- gtd
scopeName: text.plain.gtd2
uuid: 0D2B01BF-7D4A-4DB4-B5DF-CD3C1448C02A
patterns: 
- name: meta.bullet-point.strong
  match: "^\\s*\xE2\x80\xA2.*$\\n?"
- name: meta.bullet-point.light
  match: "^\\s*\xC2\xB7.*$\\n?"
- name: meta.bullet-point.star
  match: ^\s*\*.*$\n?
- name: meta.diff.separator.release-notes
  captures: 
    "1": 
      name: meta.toc-list.release-notes
  match: |
    ^\[(?:[\d-]+: )?(REVISION \d+)\]$

- begin: ^([ \t]*)(?=\S)
  contentName: meta.paragraph.text
  end: ^(?!\1(?=\S))
  patterns: 
  - name: markup.underline.link
    match: (https?|ftp|mailto):\S+?(?=[)>,.':;"]*(\s|$)|$)
  - name: constant.numeric.version-string
    match: \b([vV]\d{1,2}\.\d(\.\d)?([abdf]\d{1,3})?|\d{1,2}\.\d(\.\d)?[abdf]\d{1,3})\b
  - name: keyword.other.release-notes
    match: \[(NEW|FIXED|CHANGED|REMOVED|INFO)\]
keyEquivalent: ^~G
